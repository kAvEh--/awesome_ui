<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaveh.awsomeanim">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BlurActivity"
            android:label="@string/title_activity_blur"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".NightModeActivity"
            android:configChanges="colorMode|uiMode"
            android:label="@string/title_activity_night_mode"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ArcProgressActivity"
            android:label="@string/title_activity_arc_progress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WaveActivity"
            android:label="@string/title_activity_wave"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NavigationActivity"
            android:label="@string/title_activity_navigation" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>